/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
page{
  min-height: 80%;
  background-color: #f6f6f6;
  position:relative;
  padding-bottom: 70px;
}

.item-container {
  width: 90%;
  border: 1px solid #fff;
  border-radius: 10px;
  margin: 10px 5px;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  position: relative;
}
.item-container image {
  width: 100%;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.item-container .title {
  width:100%;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item-container .item-desc {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.item-desc view{
  margin: 4px 0px 0px;
}
.shop-title {
  font-size: 15px;
  padding: 8px 0px 8px 10px;
  color: #4a4a4a;
  background: rgba(255, 255, 255, 0.8);
  position:absolute;
  top:0;
  left:0;
  width: 100%;
  height:35px;
  box-sizing: border-box;
}
.price-info{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.price-info view{
  font-size:11px;
}
.yhq-info{
  background-image: url('https://gw.alicdn.com/tfs/TB16d.1ykPoK1RjSZKbXXX1IXXa-665-115.png_720x720.jpg');
  background-size: 100% 100%;
  color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 40px;
  align-items: center;
  padding-left: 15px;
  padding-right: 15px;
}
.non-yhq-info{
  background-color: silver;
  color: white;
  display: flex;
  justify-content: center;
  height: 40px;
  align-items: center;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.yhq-info view{
  text-align: center;
}
.price-icon{
  background-color: #f44;
  border-radius: 4px;
  color:#fff;
  padding: 3px;
  margin-left:5px !important;
}
.cur-price{
  color:#f44;
  margin-right:5px !important;
}
.now-price{
  color:#aaa;
}
.volume{
  flex:2.5;
  font-size:11px;
  color:#aaa;
  text-align: right;
  padding-right: 10px;
}
.foot{
  position: absolute;
  margin:auto;
  bottom: 55px;
  left:0;right:0;
  width:fit-content;
  color:#aaa;
  font-size:11px;
  text-decoration-line: underline;
}
.recommend-container{
  width:100%;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.recommend-container .line{
  border: .5px solid silver;
  width:18%;
  margin: 5px;
}
.reco-list {
  width:100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.reco-list .item-container{
  width:48%;
  margin: 5px 0px;
}